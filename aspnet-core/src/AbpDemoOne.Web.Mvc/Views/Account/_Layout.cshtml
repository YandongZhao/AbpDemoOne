@using System.Globalization
@using Abp.Configuration.Startup
@using Abp.Web.Security.AntiForgery
@using AbpDemoOne
@using AbpDemoOne.Web.Resources
@using AbpDemoOne.Web.Views.Shared.Components.TenantChange
@inject AbpDemoOne.Timing.AppTimes AppTimes
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@inject IMultiTenancyConfig MultiTenancyConfig
@inject IWebResourceManager WebResourceManager
@{
    Layout = null;
    AbpAntiForgeryManager.SetCookie(Context);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="shortcut icon" href="~/favicon.ico">

    <title>AbpDemoOne</title>

    <environment names="Development">

        <!-- Fonts -->
        <link asp-append-version="true" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700&amp;subset=latin-ext" rel="stylesheet">
      
        <!-- CSS - REQUIRED - START -->
        <!-- Batch Icons -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/fonts/batch-icons/css/batch-icons.css">
        <!-- Bootstrap core CSS -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/css/bootstrap/bootstrap.min.css">
        <!-- Material Design Bootstrap -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/css/bootstrap/mdb.min.css">
        <!-- Custom Scrollbar -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/plugins/custom-scrollbar/jquery.mCustomScrollbar.min.css">
        <!-- Hamburger Menu -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/css/hamburgers/hamburgers.css">

        <!-- CSS - REQUIRED - END -->
        <!-- CSS - OPTIONAL - START -->
        <!-- Font Awesome -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/fonts/font-awesome/css/font-awesome.min.css">

        <!-- CSS - DEMO - START -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/demo/css/ui-icons-batch-icons.css">
        <!-- CSS - DEMO - END -->
        <!-- CSS - OPTIONAL - END -->
        <!-- QuillPro Styles -->
        <link asp-append-version="true" rel="stylesheet" href="~/assets/css/quillpro/quillpro.css">

        <link href="~/lib/famfamfam-flags/dist/sprite/famfamfam-flags.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/view-resources/Views/Shared/_Layout.css" rel="stylesheet" />
    </environment>

    <environment names="Staging,Production">
            <link rel="stylesheet" href="~/view-resources/Views/_Bundles/account-layout.min.css" asp-append-version="true" />
        </environment>
 
    <!-- View specific styles -->
    @RenderSection("styles", required: false)

    <script type="text/javascript">
        // This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {};
        abp.appPath = '@ApplicationPath';
    </script>

</head>
<body>


    <div class="container-fluid">
        <div class="row">
            <div class="right-column sisu">
                <div class="row mx-0">
                    <div class="col-md-7 order-md-2 signin-right-column px-5 bg-dark">
                        <a class="signin-logo d-sm-block d-md-none" href="#">
                            <img src="~/assets/img/logo-white.png" width="145" height="32.3" alt="QuillPro">
                        </a>
                        <h1 class="display-4">Sign In To get Started</h1>
                        <p class="lead mb-5">
                            Big data latte SpaceTeam unicorn cortado hacker physical computing paradigm.
                        </p>
                    </div>
                    <div class="col-md-5 order-md-1  signin-left-column bg-white px-5">
                        <div class="text-center">
                            <a class="signin-logo d-sm-none d-md-block" href="#">
                                <span class="logo-span">AbpDemoOne</span>
                                @*<img src="~/assets/img/logo-dark.png" width="145" height="32.3" alt="QuillPro">*@
                            </a>
                        </div>
                       

                        @if (MultiTenancyConfig.IsEnabled)
                        {
                            <div class=" mb-3 tenant-change-box">
                                <vc:tenant-change></vc:tenant-change>
                            </div>
                        }

                        @RenderBody()

                        <vc:account-languages></vc:account-languages>

                        <div class="row">
                            <div class="col-md-12 my-5 text-center" style="color: #e9e9e9">
                                <span>&copy; @DateTime.Now.Year AbpDemoOne. <b>Version </b> @AppVersionHelper.Version [@AppVersionHelper.ReleaseDate.ToString("yyyyMMdd")]</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <environment names="Development">

        <!-- SCRIPTS - REQUIRED START -->
        <!-- Placed at the end of the document so the pages load faster -->
        <!-- Bootstrap core JavaScript -->
        <!-- JQuery -->
        <script type="text/javascript" src="~/assets/js/jquery/jquery-3.1.1.min.js" asp-append-version="true"></script>
        <!-- Popper.js - Bootstrap tooltips -->
        <script type="text/javascript" src="~/assets/js/bootstrap/popper.min.js" asp-append-version="true"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="~/assets/js/bootstrap/bootstrap.min.js" asp-append-version="true"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="~/assets/js/bootstrap/mdb.min.js" asp-append-version="true"></script>
        <!-- Velocity -->
        <script type="text/javascript" src="~/assets/plugins/velocity/velocity.min.js" asp-append-version="true"></script>
        <script type="text/javascript" src="~/assets/plugins/velocity/velocity.ui.min.js" asp-append-version="true"></script>
        <!-- Custom Scrollbar -->
        <script type="text/javascript" src="~/assets/plugins/custom-scrollbar/jquery.mCustomScrollbar.concat.min.js" asp-append-version="true"></script>
        <!-- jQuery Visible -->
        <script type="text/javascript" src="~/assets/plugins/jquery_visible/jquery.visible.min.js" asp-append-version="true"></script>
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script type="text/javascript" src="~/assets/js/misc/ie10-viewport-bug-workaround.js" asp-append-version="true"></script>

        <!-- SCRIPTS - REQUIRED END -->
        <!-- SCRIPTS - OPTIONAL START -->
        <!-- Image Placeholder -->
        <script type="text/javascript" src="~/assets/js/misc/holder.min.js" asp-append-version="true"></script>
        <!-- SCRIPTS - OPTIONAL END -->
        <!-- QuillPro Scripts -->
        <script type="text/javascript" src="~/assets/js/scripts.js" asp-append-version="true"></script>

        <script src="~/lib/abp-web-resources/Abp/Framework/scripts/abp.js" asp-append-version="true"></script>
        <script src="~/lib/abp-web-resources/Abp/Framework/scripts/libs/abp.jquery.js" asp-append-version="true"></script>

        @*<script src="~/lib/json2/json2.js" asp-append-version="true"></script>*@
        @*<script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>*@
