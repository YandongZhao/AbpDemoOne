@using AbpDemoOne.Web.Views.Shared.Components.SideBarUserArea
@model SideBarUserAreaViewModel

<li class="nav-item dropdown">
    @if (Model.LoginInformations != null && Model.LoginInformations.User != null)
    {
        <a class="nav-link dropdown-toggle" id="navbar-dropdown-navbar-profile" data-toggle="dropdown" data-flip="false" aria-haspopup="true" aria-expanded="false">
            <div class="profile-name">
                @Html.Raw(Model.GetShownLoginName())
            </div>
            <div class="profile-picture bg-gradient bg-primary has-message float-right">
                <img src="~/images/user.png" width="44" height="44">
                <div class="email">@Model.LoginInformations.User.EmailAddress</div>
            </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar-dropdown-navbar-profile">
            <li><a class="dropdown-item" href="/AppDemo/Profile" >Profile</a></li>
            <li>
                <a class="dropdown-item" href="/AppDemo/Profile">@L("Messages")
                    <span class="badge badge-danger badge-pill float-right">3</span>
                </a>
            </li>
            <li><a class="dropdown-item" href="/AppDemo/Profile">@L("Settings")</a></li>
            <li><a class="dropdown-item" href="/AppDemo/Profile"><i class="material-icons">input</i>@L("Logout")</a></li>
        </ul>
    }
    </li>


