@using AbpDemoOne.Configuration.Ui
@model AbpDemoOne.Web.Views.Shared.Components.Pagination.PaginationViewModel

<div class="row">
    <div class="col-md-6 customer-page text-left " style="margin-top: .8rem;">
        <div class="page " id="UsersTable_info" role="status" aria-live="polite">
            显示第 @Model.PageFrom 至 @Model.PageEnd 项结果，共 @Model.TotalCount 条记录
        </div>

    </div>
    <div class="col-md-6 text-right" style="  margin-top: .5rem;">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                
                @for (int i = 0; i < Model.PageCont; i++)
                {
                    if (Model.PageIndex == (i + 1))
                    {
                        <li class="page-item active"><a class="page-link" href="javascript:void(0)" >@(i+1)</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="javascript:void(0)">@(i+1)</a></li>
                    }

                }
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>